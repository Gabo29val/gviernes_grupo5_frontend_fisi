<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/common_padding_middle"
            android:text="Producto agregado agregado correctamente"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/common_padding_default"
            android:src="@drawable/ic_check_circle_outline"
            app:tint="@color/white" />
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_margin="@dimen/common_padding_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puedes seguir comprando" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/common_padding_min"
        android:text="ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>